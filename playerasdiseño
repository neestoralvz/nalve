    <script>
        // Código JavaScript utilizando SVG.js
        const draw = SVG().addTo('#illustration').size(400, 200);
        
        // Dibujar el verso
        draw.text("En la Feria del Ostion, José Alberto brilla sin comparación.")
            .font({ size: 20, family: 'Arial', anchor: 'middle' })
            .move(200, 50);
        
        draw.text("Su reinado es toda una sensación.")
            .font({ size: 20, family: 'Arial', anchor: 'middle' })
            .move(200, 100);
        
        // Dibujar ilustraciones
        const crown = draw.image('crown.svg', 50, 50).move(100, 150);
        
        const ostion1 = draw .image('ostion.svg', 30, 30).move(150, 150);
        const ostion2 = draw.image('ostion.svg', 30, 30).move(200, 150);
        const ostion3 = draw.image('ostion.svg',         30, 30).move(250, 150);
        
        // Agregar estilos a las ilustraciones
        crown.style('opacity: 0.8');
        ostion1.style('opacity: 0.6');
        ostion2.style('opacity: 0.6');
        ostion3.style('opacity: 0.6');
    </script>
